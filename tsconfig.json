{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["src/*"],
      "$/*": ["data/*"]
    },
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "out"]
}
