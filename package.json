{
  "name": "interlinear-bible-simple-editor",
  "productName": "Interlinear Bible Simple Editor",
  "version": "0.4.0",
  "description": "Interlinear Bible Simple Editor, makes Interlinear Bible translation easier!",
  "main": ".webpack/main",
  "build": {
    "appID": "com.byb.ibse",
    "productName": "Interlinear Bible Simple Editor",
    "icon": "./build/assets/icons/dove.ico"
  },
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "webpack": "webpack --config ./build/webpack.web.config.js",
    "lint": "eslint --ext .ts ."
  },
  "keywords": [],
  "author": {
    "name": "aranggitoar",
    "email": "aranggi.josef@gmail.com"
  },
  "license": "GPL-2.0",
  "config": {
    "forge": {
      "forge": {
        "packagerConfig": {
          "icon": "./build/assets/icons/dove.ico"
        }
      },
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "IBSE"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "devContentSecurityPolicy": "default-src 'self' 'unsafe-inline' data:; script-src 'self' 'unsafe-eval' 'unsafe-inline' data:",
            "mainConfig": "./build/webpack.main.config.js",
            "renderer": {
              "nodeIntegration": true,
              "config": "./build/webpack.dev.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/dev.tsx",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.57",
    "@electron-forge/maker-deb": "6.0.0-beta.57",
    "@electron-forge/maker-rpm": "6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "6.0.0-beta.57",
    "@electron-forge/maker-zip": "6.0.0-beta.57",
    "@electron-forge/plugin-webpack": "6.0.0-beta.57",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "css-loader": "^5.2.6",
    "electron": "^13.1.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "fork-ts-checker-webpack-plugin": "^6.2.10",
    "node-loader": "^2.0.0",
    "react-hot-loader": "^4.13.0",
    "style-loader": "^2.0.0",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "@types/react": "^17.0.9",
    "@types/react-dom": "^17.0.11",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "styled-components": "^5.3.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2"
  }
}
